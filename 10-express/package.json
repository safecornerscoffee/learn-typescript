{
  "name": "blockchain-ws",
  "version": "1.0.0",
  "scripts": {
    "build:client": "tsc -p src/client/tsconfig.client.json",
    "build:server": "tsc -p src/server/tsconfig.server.json",
    "build": "concurrently npm:build:*",
    "start:tsc:client": "tsc -p src/client/tsconfig.client.json --watch",
    "start:server": "nodemon --inspect src/server/main.ts",
    "start": "concurrently npm:start:*",
    "now-start": "NODE-ENV=production node build/server/main.js"
  },
  "dependencies": {
    "express": "^4.17.1",
    "lit-html": "^1.4.1",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ws": "^7.4.7",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.12",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "typescript-lit-html-plugin": "^0.9.0"
  }
}
